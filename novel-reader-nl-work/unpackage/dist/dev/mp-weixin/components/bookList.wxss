
.book-list-container {
  background-color: #fff;
}
.book-item {
  transition: all 0.3s ease;
  border-bottom: 1px solid #f0f0f0;
}
.book-item:active {
  background-color: #f9f9f9;
}
.book-image {
  width: 250rpx;
  height: 250rpx;
  object-fit: cover;
}
.book-title {
  font-size: 32rpx;
  color: #333;
}
.book-description {
  line-height: 42rpx;
  font-size: 28rpx;
  color: #666;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
}
